<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_sides"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg">


    <ImageButton
        android:id="@+id/userPic"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/userMailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userPic"
        android:layout_marginTop="44dp"
        android:text="Ad Soyad:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/userMailTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userMailLabel"
        android:layout_alignBottom="@+id/userMailLabel"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:inputType="textPersonName" />


    <TextView
          android:id="@+id/sensorLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/userMailLabel"
          android:layout_marginTop="50dp"
          android:text="Sensör Durumu"
          android:textColor="@android:color/holo_red_dark"
          android:textSize="18sp" />
      <TextView
          android:id="@+id/sicaklikSensorLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/sensorLabel"
          android:layout_marginTop="10dp"
          android:text="Sıcaklık Sensörü:"
          android:textSize="18sp" />
      <TextView
          android:id="@+id/sicaklikSensorTXT"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Çalışıyor"
          android:layout_alignBaseline="@+id/sicaklikSensorLabel"
          android:layout_alignBottom="@+id/sicaklikSensorLabel"
          android:layout_marginLeft="180dp"
          android:textSize="18sp" />



     <TextView
          android:id="@+id/agirlikSensorLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/sicaklikSensorLabel"
          android:layout_marginTop="10dp"
          android:text="Ağırlık Sensörü:"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/agirlikSensorTXT"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Çalışıyor"
          android:layout_alignBaseline="@+id/agirlikSensorLabel"
          android:layout_alignBottom="@+id/agirlikSensorLabel"
          android:layout_marginLeft="180dp"
          android:textSize="18sp" />
      <TextView
          android:id="@+id/fotografSensorLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/agirlikSensorLabel"
          android:layout_marginTop="10dp"
          android:text="Fotoğraf Sensörü:"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/fotografSensorTXT"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Çalışıyor"
          android:layout_alignBaseline="@+id/fotografSensorLabel"
          android:layout_alignBottom="@+id/fotografSensorLabel"
          android:layout_marginLeft="180dp"
          android:textSize="18sp" />

    <ImageView
        android:id="@+id/editBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userPic"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        app:srcCompat="@drawable/if_edit_103539" />

    <ImageView
        android:id="@+id/saveBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userPic"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/edit" />


</RelativeLayout>